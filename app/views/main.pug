doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Hello, World! - Pug & Bootstrap
    // Link to Bootstrap 5 CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH', crossorigin='anonymous')

  body
    // Bootstrap container for centering and padding
    .container.mt-5 
      // Bootstrap Jumbotron/Card-like display
      .p-5.mb-4.bg-light.rounded-3
        .container-fluid.py-5
          // Display heading using Bootstrap utility classes
          h1.display-5 Hello, World!
          // Text paragraph
          p.col-md-8.fs-4 This page is a simple example generated by Pug and styled with Bootstrap 5.
          // Button using Bootstrap button classes
          button.btn.btn-primary.btn-lg(type='button') Click Me!

    // Link to Bootstrap 5 JavaScript Bundle
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz', crossorigin='anonymous')