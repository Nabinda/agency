doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    
    //- The title block allows child pages to set the page title
    block title
      title Employee Portal

    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    
    //- Load Utilities and Mixins
    include ../../utils/icons.pug
    include mixins/mixins.pug

    //- Custom Styles (The entire style block is moved here)
    style.
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300..900&display=swap');

      :root {
        --app-bg: #0a0f18;
        --sidebar-bg: #0f141e;
        --card-bg: #131b26;
        --text-light: #e5e7eb;
        --text-muted: #9ca3af;
        --border-color: rgba(255, 255, 255, 0.08);

        /* Accent Colors */
        --accent-teal: #14b8a6;
        --accent-blue: #3b82f6;
        --accent-yellow: #eab308;
        --accent-green: #22c55e;
        --accent-red: #ef4444; // Added for rejection status
      }

      body {
        font-family: 'Inter', sans-serif;
        background-color: var(--app-bg);
        color: var(--text-light);
        height: 100vh;
        overflow: hidden; 
      }

      /* --- Layout --- */
      .dashboard-container {
        display: flex;
        height: 100%;
        flex-direction: row;
      }

      /* --- Sidebar --- */
      .sidebar {
        width: 280px;
        background-color: var(--sidebar-bg);
        border-right: 1px solid var(--border-color);
        display: flex;
        flex-direction: column;
        padding: 1.5rem;
        flex-shrink: 0;
        transition: transform 0.3s ease;
      }

      .offcanvas-dark {
        background-color: var(--sidebar-bg);
        color: var(--text-light);
      }
      .offcanvas-dark .btn-close {
        filter: invert(1) grayscale(100%) brightness(200%);
      }

      .main-content {
        flex-grow: 1;
        overflow-y: auto;
        padding: 2rem;
        position: relative;
      }

      /* --- Navigation --- */
      .nav-link {
        color: var(--text-muted);
        padding: 0.85rem 1rem;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        transition: all 0.2s ease;
        margin-bottom: 0.5rem;
        font-weight: 500;
        font-size: 0.95rem;
      }

      .nav-link:hover {
        color: var(--text-light);
        background-color: rgba(255, 255, 255, 0.05);
      }
      
      // Default active link for Dashboard (Teal)
      .nav-link.active-dashboard {
        background-color: rgba(20, 184, 166, 0.15);
        color: var(--accent-teal);
      }
      
      // Alternative active link styles (e.g., for Holiday Requests, using Blue)
      .nav-link.active-blue {
        background-color: rgba(59, 130, 246, 0.15);
        color: var(--accent-blue);
      }

      .nav-link.text-danger:hover {
        background-color: rgba(220, 53, 69, 0.1);
        color: #ef4444 !important;
      }

      /* Styles for Bootstrap Icons within Nav */
      .nav-link i {
        margin-right: 0.85rem;
        font-size: 1.2rem;
        line-height: 1;
      }

      /* --- Components --- */
      .header-icon-box {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(20, 184, 166, 0.15);
        color: var(--accent-teal);
        flex-shrink: 0;
      }
      
      /* Target icons inside header box */
      .header-icon-box i { font-size: 1.5rem; }

      .btn-teal {
        background-color: var(--accent-teal);
        border: none;
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 0.5rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        white-space: nowrap;
      }
      .btn-teal:hover { background-color: #0d9488; color: white; }

      .card {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 0.75rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        color: var(--text-light);
      }
      .text-muted { color: var(--text-muted) !important; }

      /* Stat Cards */
      .stat-card { border-left: 4px solid transparent; }
      .stat-card-blue { border-left-color: var(--accent-blue); }
      .stat-card-teal { border-left-color: var(--accent-teal); }
      .stat-card-yellow { border-left-color: var(--accent-yellow); }
      .stat-card-green { border-left-color: var(--accent-green); }

      .stat-icon {
        width: 38px; height: 38px;
        border-radius: 0.5rem;
        display: flex; align-items: center; justify-content: center;
        background-color: rgba(255, 255, 255, 0.05);
        font-size: 1.2rem;
      }

      /* Schedule / Status */
      .schedule-item {
        padding: 1.25rem 0;
        border-bottom: 1px solid var(--border-color);
      }
      .schedule-item:last-child { border-bottom: none; }

      .status-badge {
        padding: 0.35rem 0.85rem;
        border-radius: 2rem;
        font-size: 0.75rem;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        text-transform: uppercase;
        letter-spacing: 0.025em;
        /* Default for schedule */
        background-color: rgba(34, 197, 94, 0.15);
        color: var(--accent-green);
      }
      
      /* Specific Status Badges (for use in holiday request page) */
      .status-badge-pending { background-color: rgba(234, 179, 8, 0.15); color: var(--accent-yellow); }
      .status-badge-approved { background-color: rgba(34, 197, 94, 0.15); color: var(--accent-green); }
      .status-badge-rejected { background-color: rgba(239, 68, 68, 0.15); color: var(--accent-red); }

      /* Global Text */
      h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
        color: var(--text-light);
      }

      /* --- Responsive --- */
      @media (max-width: 991.98px) {
        body { height: auto; overflow: auto; }
        .dashboard-container { flex-direction: column; }
        .sidebar { display: none; }
        .main-content { padding: 1rem; }
        .mobile-header { display: flex !important; }
        h2.h3 { font-size: 1.5rem; }
      }
      @media (min-width: 992px) {
        .mobile-header { display: none !important; }
      }
  
  body
    //- Define the navigation content mixin once here
    mixin navContent()
      h5.mb-4.fw-bold.px-2.d-flex.align-items-center
        .header-icon-box.me-3(style="width: 32px; height: 32px; background: rgba(20, 184, 166, 0.2);")
          +icon('user')
        | Employee Portal

      //- The navigation links are defined here
      nav.nav.flex-column.flex-grow-1
        //- The 'activeClass' block allows the child template to set which link is active
        block navigation
          a.nav-link.active-dashboard(href="dashboard")
            +icon('dashboard')
            | Dashboard
          a.nav-link(href="#")
            +icon('calendar')
            | Working Hours
          a.nav-link(href="request-holiday")
            +icon('sun')
            | Holiday Requests
          a.nav-link(href="request-advance-payment")
            +icon('money')
            | Advance Payment
          a.nav-link(href="#")
            +icon('file')
            | Payslips

      div.mt-auto
        a.nav-link.text-danger(href="#")
          +icon('logout')
          | Logout

    .dashboard-container

      //- --- MOBILE HEADER ---
      .mobile-header.bg-dark.border-bottom.border-secondary.border-opacity-10.p-3.align-items-center.justify-content-between.sticky-top
        .d-flex.align-items-center
          button.btn.btn-outline-secondary.border-0.me-2(type="button", data-bs-toggle="offcanvas", data-bs-target="#mobileSidebar")
            +icon('menu', 'fs-4')
          h5.mb-0.fw-bold Employee Portal
        .header-icon-box(style="width: 32px; height: 32px;")
          span.fw-bold JS

      //- --- SIDEBARS ---
      aside.sidebar
        +navContent()

      .offcanvas.offcanvas-start.offcanvas-dark(tabindex="-1", id="mobileSidebar")
        .offcanvas-header
          button.btn-close.btn-close-white.ms-auto(type="button", data-bs-dismiss="offcanvas")
        .offcanvas-body.pt-0.h-100
          +navContent()

      //- --- MAIN CONTENT BLOCK ---
      main.main-content
        block content
          //- Child templates will insert their main page content here