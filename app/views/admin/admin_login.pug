doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Admin Login • Workforce Manager

    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    
    //- Include Icon Utility
    include ../../utils/icons.pug

    style.
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');

      :root {
        --app-bg: #0a0f18;
        --card-bg: #131b26;
        --text-light: #e5e7eb;
        --text-muted: #9ca3af; 
        --admin-color: #3b82f6;
      }

      body {
        font-family: 'Inter', sans-serif;
        background-color: var(--app-bg);
        color: var(--text-light);
      }

      .text-muted {
        color: var(--text-muted) !important;
      }

      .login-card {
        background-color: var(--card-bg);
        border-radius: 0.75rem;
        border: 1px solid rgba(255,255,255,0.08);
        padding: 2.5rem;
        box-shadow: 0 6px 18px rgba(0,0,0,0.35);
        transition: border-color 0.3s ease;
      }

      .login-card:hover {
        border-color: var(--admin-color);
      }

      .admin-icon {
        padding: 1rem;
        border-radius: 0.75rem;
        background-color: rgba(59,130,246,0.15);
        color: var(--admin-color);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        width: 84px;
        height: 84px;
      }

      .form-control {
        background-color: rgba(255, 255, 255, 0.05); 
        border: 1px solid rgba(255, 255, 255, 0.1);  
        color: var(--text-light) !important;
        transition: all 0.2s ease;
      }

      .form-control::placeholder {
        color: rgba(255, 255, 255, 0.4); 
      }

      .form-control:focus {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff !important;
        border-color: var(--admin-color);
        box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
      }

      .btn-admin {
        background-color: var(--admin-color);
        border-color: var(--admin-color);
        color: white;
        transition: transform .15s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .btn-admin:hover {
        background-color: #2563eb;
        border-color: #2563eb;
        transform: scale(1.02);
      }

  body.d-flex.flex-column.min-vh-100

    .content-wrapper.d-flex.align-items-center.justify-content-center.w-100.p-3.flex-grow-1
      .container(style="max-width: 420px;")
        .login-card.text-center

          //- Icon using Mixin
          .admin-icon.mb-4
             +icon('shield')

          h2.fw-bold.text-white.mb-2 Admin Login
          p.text-secondary.mb-4 Access your dashboard to manage employees and schedules.

          //- Error message
          if error
            .alert.alert-danger(role="alert") #{error}

          //- Login Form
          form(method="POST" action="/admin-login")
            .mb-3.text-start
              label.form-label.small.text-muted.fw-bold(for="email") EMAIL ADDRESS
              input#email.form-control.py-2(
                type="email"
                name="email"
                required
                placeholder="Enter your email"
                value= (typeof email !== 'undefined' ? email : '')
              )

            .mb-4.text-start
              label.form-label.small.text-muted.fw-bold(for="password") PASSWORD
              input#password.form-control.py-2(type="password" name="password" required, placeholder="Enter your password")

            button.btn.btn-admin.btn-lg.w-100(type="submit")
              | Login
              +icon('arrow-right', 'ms-2')

          a.d-block.mt-4.text-secondary.text-decoration-none(href="#") Forgot your password?

    footer.text-center.text-secondary.mt-4.pb-3
      small © Workforce Manager — Secure Admin Access
